<%- include('../partials/header') %>
<div class="container">
    <div class="row new">
        <h1>Add New Campground</h1>
        <div class="medium">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" type="text" name="newCamp[name]" placeholder="Name">
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <input class="form-control" type="text" name="newCamp[image]" placeholder="Image url">
                </div>
                <div class="form-group">
                    <label>Example textarea</label>
                    <textarea class="form-control" name="newCamp[discription]" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-success btn-lg btn-block" type="submit" value="Submit">
                </div>              
                
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
        
    </div>
    
</div>
<%- include('../partials/footer') %>