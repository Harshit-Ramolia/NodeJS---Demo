<%- include('../partials/header') %>
<div class="container">
    <div class="row new">
        <h1>Edit: <%=newCamp.name%></h1>
        <div class="medium">
            <form action="/campgrounds/<%=newCamp._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" type="text" name="newCamp[name]" placeholder="Name" value="<%=newCamp.name%>">
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <input class="form-control" type="text" name="newCamp[image]" placeholder="Image url" value="<%=newCamp.image%>"">
                </div>
                <div class="form-group">
                    <label>Discription</label>
                    <textarea class="form-control" name="newCamp[discription]" rows="3"><%=newCamp.discription%></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-success btn-lg btn-block" type="submit" value="Submit">
                </div>              
                
            </form>
            <a href="/campgrounds/<%=newCamp._id%>">Go back</a>
        </div>
        
    </div>
    
</div>
<%- include('../partials/footer') %>